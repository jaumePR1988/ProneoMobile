rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.token.email.lower())).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    function isAdminOrDirector() {
      return hasRole('admin') || hasRole('director') || hasRole('global');
    }

    // Users Collection
    // - Users can read/write their own document
    // - Admins/Directors can read/write all
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.token.email.lower() == userId || isAdminOrDirector());
    }

    // Players Collection
    // - Authenticated users can read
    // - Only Admins/Directors (and maybe approved Scouts) can write
    // For now, let's allow auth users to write to avoid breaking scout functionality
    match /players/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); 
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if isAuthenticated(); 
    }
  }
}
